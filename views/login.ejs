            <button type="submit">Login</button>
        </form>
        <hr/>
    </div>
    <button class="ui pink mini button">Aggiungi caratteristica&nbsp <i class="smile outline icon"></i></button>

    <div>
        <h1> Login Pub </h1>
        <form action="/pub_login" method="POST">
            <input type="text" placeholder="email" name="emaillogin">
            <input type="text" placeholder=" password" name="passwordlogin">
            <button type="submit">Login</button>
        </form>
        <hr/>
    </div>


    <p>if you are not register user, click on this button</p>
    <form action="/userRegistration" method="GET">
        <button type="submit">Register now</button>
    </form>

    <p>if you are not register pub, click on this button</p>
    <form action="/pubRegistration" method="GET">
        <button type="submit">Register now</button>
    </form>

    <div>
        <h4 > result: <%= data.status %> </h4>
    </div>
